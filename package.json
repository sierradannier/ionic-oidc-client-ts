{
  "name": "@ionic/oidc-client-ts",
  "version": "0.0.1",
  "description": "Ionic OpenID Connect (OIDC) & OAuth2 client library",
  "author": "D Sierra",
  "homepage": "",
  "exports": {
    ".": {
      "types": "./dist/types/ionic-oidc-client-ts.d.ts",
      "import": "./dist/esm/ionic-oidc-client-ts.js",
      "require": "./dist/umd/ionic-oidc-client-ts.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ionic",
    "capacitor",
    "cordova",
    "authentication",
    "oauth2",
    "oidc",
    "openid",
    "OpenID Connect"
  ],
  "scripts": {
    "build": "node build.js && npm run build-types",
    "build-types": "tsc -p tsconfig.build.json && api-extractor run",
    "prepack": "npm run build",
    "test": "tsc && jest",
    "typedoc": "typedoc",
    "lint": "eslint --max-warnings=0 --cache ."
  },
  "private": true,
  "dependencies": {
    "@capacitor/core": "5.2.2",
    "@capacitor/app": "5.0.6",
    "@capacitor/browser": "5.0.6",
    "@capacitor/ios": "5.2.2",
    "@capacitor/android": "5.2.3",
    "@capacitor/preferences": "5.0.6",
    "capacitor-secure-storage-plugin": "0.9.0",
    "oidc-client-ts": "~2.2.4"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.35.0",
    "@capacitor/cli": "5.2.2",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "@types/cordova": "^11.0.0",
    "@types/jest": "^29.2.3",
    "@testing-library/jest-dom": "^6.0.0",
    "esbuild": "^0.17.0",
    "eslint": "^8.5.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "ts-node": "^8.3.0",
    "typedoc": "^0.24.1",
    "typescript": "~5.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-mock": "^29.3.1",
    "ts-jest": "^29.0.3",
    "yn": "^5.0.0"
  },
  "engines": {
    "node": ">= 16"
  }
}
